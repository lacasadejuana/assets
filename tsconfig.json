{
	"compilerOptions": {
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",

		"outDir": "public/js",
		"preserveConstEnums": true,

		"isolatedModules": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"target": "es2020",
		"noEmit": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"ES2021",
			"WebWorker",
			"dom"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/js/*"
			],

			"@/components/*": [
				"src/js/components/*"
			],

			"~/*": [
				"./*"
			]
		},
		"types": [
			"@cloudflare/workers-types",
			"@lacasadejuana/types",
			"dropzone",
			"bootstrap-table",
			"google.maps",
			"jquery",
			"datatables.net",
			"scrollbooster",
			"laravel-mix",
			"bootstrap",
			"alpinejs",
			"select2",
			"playwright",
			"echarts",
			"leaflet"
		]
	},
	"include": [

		"./src/js/**/**/*.ts",
		"./src/js/**/**/.d.ts",
		"./src/js/**/*.d.ts",
		"./src/js/**/*.js",
		"./src/js/**/*.ts",
		"./src/js/**/*.ts",
		"./src/js/**/.d.ts",
		"./src/js/*.d.ts",
		"./src/js/*.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"vendor",
		"public"
	]
}